var int int_value = 1;

// assign
int_value = 2;
print(int_value, "\n");


// add-assign
print("\ntest add-assign operation\n");
int_value += 1;
print(int_value, "\n");

int_value += 2;
print(int_value, "\n");

int_value += 10;
print(int_value, "\n");

int_value += 1+2+3+4+5+6+7;
print(int_value, "\n");



// sub-assign
print("\ntest sub-assign operation\n");
int_value -= 1;
print(int_value, "\n");

int_value -= 1;
print(int_value, "\n");

int_value -= 4;
print(int_value, "\n");

int_value -= 4 - 1 - 1 -1 + 3;
print(int_value, "\n");



print("\ntest mul-assign operation\n");
int_value *= 100;
print(int_value, "\n");

int_value *= 2;
print(int_value, "\n");

int_value *= 30;
print(int_value, "\n");

int_value *= 1 + 1;
print(int_value, "\n");



print("\ntest div-assign operation\n");
int_value /= 5;
print(int_value, "\n");

int_value /= 4;
print(int_value, "\n");

int_value /= 3;
print(int_value, "\n");

int_value /= 3 + 1 + 2;
print(int_value, "\n");



print("\ntest mod-assign operation\n");
int_value %= 60 - 1;
print(int_value, "\n");

int_value %= 10;
print(int_value, "\n");

int_value %= 2 + 1;
print(int_value, "\n");

int_value %= 1;
print(int_value, "\n");
